<AGF-HUDPlus-BMCounter07Days-KeepDayCount>

	

<!--Adds under the compass BloodMoon Counter of every 7 days.-->
	<append xpath="/windows/window[@name='windowCompass']">
		<rect name="hud" pos="70,-53" width="380">
			<!--<sprite pos="0,0" name="Background" sprite="ui_game_header_fill" color="0,0,0,225" foregroundlayer="true" height="30" width="380" type="sliced" />-->
			<label depth="3" pos="0,-4" text="{# localization('agfNextBloodMoon')}:   [{daycolor}]{# localization('daycountdown_' + day%7)}[-]" width="380" font_size="22" justify="center"  height="24" visible="{showtime}"/>
		</rect>	
	</append>	


</AGF-HUDPlus-BMCounter07Days-KeepDayCount>